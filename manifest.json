{
    "manifest_version": 2,
    "name": "MailStake",
    "short_name": "MailStake",
    "version": "1.0",
    "author": "krboktv <kk@buttonwallet.com>, EnoRage <nk@buttonwallet.com>",

    "description": "",

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        "dist/extension.js"
    ],

    "permissions": [
        "https://*/*"
    ]
}
