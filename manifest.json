{
    "manifest_version": 2,
    "name": "MailStake",
    "short_name": "MailStake",
    "version": "1.0",
    "author": "krboktv <kk@buttonwallet.com>, EnoRage <nk@buttonwallet.com>",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png",
        "512": "icons/512.png",
        "1024": "icons/1024.png"
    },

    "description": "",

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        "dist/extension.js"
    ],

    "permissions": [
        "https://*/*"
    ]
}
